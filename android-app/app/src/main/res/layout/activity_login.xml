<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

  <ImageView
      android:id="@+id/logo_imageview"
      android:layout_width="200dp"
      android:layout_height="200dp"
      app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"
      android:layout_marginEnd="106dp" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="106dp"
      android:background="#000"/>

  <EditText
      android:id="@+id/email_edittext"
      android:layout_width="320dp"
      android:layout_height="wrap_content"
      android:inputType="textEmailAddress"
      android:layout_marginTop="32dp"
      android:hint="Email"
      app:layout_constraintTop_toBottomOf="@+id/logo_imageview"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="46dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"/>

  <EditText
      android:id="@+id/password_edittext"
      android:layout_width="320dp"
      android:layout_height="wrap_content"
      android:inputType="textPassword"
      android:hint="Password"
      android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
      android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/email_edittext"/>

  <Button
      android:id="@+id/login_button"
      android:text="Login"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      app:layout_constraintTop_toBottomOf="@+id/password_edittext"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="106dp"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="106dp"
      android:onClick="onClick"
      android:bottomRightRadius="16dp"
      android:bottomLeftRadius="16dp"
      android:topLeftRadius="16dp"
      android:topRightRadius="16dp"
      />

  <TextView
      android:id="@+id/sign_up_textview"
      android:textSize="16sp"
      android:text="Don't have an account? Sign Up"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/login_button"
      android:onClick="onClick" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="92dp" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="93dp"/>
</android.support.constraint.ConstraintLayout>