<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

  <TextView
      android:id="@+id/change_photo_dialog_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:padding="8dp"
      android:text="Change Photo"
      android:textSize="32sp"
      app:layout_constraintStart_toStartOf="@+id/guideline"
      app:layout_constraintTop_toTopOf="parent"
  />


  <Button
      android:id="@+id/take_photo_button"
      style="@style/CustomizeDialogButton"
      android:text="Take Photo"
      app:layout_constraintTop_toBottomOf="@+id/change_photo_dialog_title"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>


  <Button
      android:id="@+id/choose_photo_button"
      style="@style/CustomizeDialogButton"
      android:text="Choose Photo"
      app:layout_constraintTop_toBottomOf="@+id/take_photo_button"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

  <Button
      android:id="@+id/cancel_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="32dp"
      android:text="Cancel"
      android:textColor="#2196F3"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
      app:layout_constraintBottom_toBottomOf="parent"/>

  <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_end="378dp"
  />

  <android.support.constraint.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"
  />

</android.support.constraint.ConstraintLayout>