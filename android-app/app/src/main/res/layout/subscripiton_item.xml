<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

<data>
  <variable name="obj" type="fgcu.mangohacks2019.models.Coordinator">

  </variable>
</data>
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <ImageView android:background="#000" android:id="@+id/profile_imageview"
          android:layout_width="40dp" android:layout_height="40dp"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="16dp"/>
      <TextView android:text="@{obj.name}" android:id="@+id/name_textview"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          app:layout_constraintStart_toEndOf="@+id/profile_imageview"
          android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/profile_imageview"/>
      <TextView android:text="@{obj.phoneNumber}" android:id="@+id/phone_number_textview"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          app:layout_constraintStart_toEndOf="@+id/profile_imageview"
          android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/name_textview"/>

    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</layout>